<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/order_box"
    android:layout_marginTop="5dp"
    android:padding="5dp">

    <TextView
        android:id="@+id/tv_order_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单详情"
        android:textSize="14sp"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单 ID:"
        android:textSize="14sp"
        android:textColor="#000"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_order_item" />

    <TextView
        android:id="@+id/order_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单商品"
        android:textSize="14sp"
        android:textColor="#000"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_id"/>

    <TextView
        android:id="@+id/order_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单 Token："
        android:textSize="14sp"
        android:textColor="#000"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_product"/>

    <TextView
        android:id="@+id/purchase_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="purchase Token："
        android:textColor="#000"

        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_token"/>

    <Button
        android:id="@+id/delay"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:text="去处理"
        android:background="#E40B49"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/purchase_token"
        />



</androidx.constraintlayout.widget.ConstraintLayout>

